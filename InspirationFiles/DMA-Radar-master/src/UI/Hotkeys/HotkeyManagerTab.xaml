<UserControl x:Class="LoneEftDmaRadar.UI.Hotkeys.HotkeyManagerTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Hotkeys"
             mc:Ignorable="d"
             Padding="10"
             PreviewKeyDown="OnPreviewKeyDown"
             Focusable="True">
    <UserControl.Resources>
        <vm:BooleanToBrushConverter x:Key="BooleanToBrushConverter">
            <vm:BooleanToBrushConverter.TrueBrush>
                <SolidColorBrush Color="#0078D7" Opacity="0.3"/>
            </vm:BooleanToBrushConverter.TrueBrush>
            <vm:BooleanToBrushConverter.FalseBrush>
                <SolidColorBrush Color="Transparent"/>
            </vm:BooleanToBrushConverter.FalseBrush>
        </vm:BooleanToBrushConverter>

        <!-- Dark Theme Colors - aligned with App.xaml theme -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0F1115"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#222730"/>
        <SolidColorBrush x:Key="ListeningBrush" Color="#1A4D6F"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#22252D"/>
        <SolidColorBrush x:Key="TextBrush" Color="#E6E9EF"/>
        <SolidColorBrush x:Key="SubtleBrush" Color="#9AA3B5"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#4DA3FF"/>
    </UserControl.Resources>

    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:HotkeyManagerViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Margin="0,0,0,8"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource TextBrush}"
                   Text="Keybind Manager" />

        <!-- Instructions -->
        <GroupBox Grid.Row="1"
                  Header="How to bind keys"
                  Margin="0,0,0,12"
                  Foreground="{StaticResource TextBrush}">
            <TextBlock TextWrapping="Wrap"
                       Margin="5"
                       FontStyle="Italic"
                       Foreground="{StaticResource SubtleBrush}">
                Click on any action or key cell to start listening for input<LineBreak/>
                Press any keyboard key or mouse button to bind it<LineBreak/>
                Press <Bold>ESC</Bold> to cancel binding<LineBreak/>
                Click <Bold>Clear</Bold> to unbind an action
            </TextBlock>
        </GroupBox>

        <!-- Column Headers -->
        <Grid Grid.Row="2" Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Action"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextBrush}"
                       Margin="8,0,0,0"/>
            <TextBlock Grid.Column="1"
                       Text="Keybind"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextBrush}"
                       Margin="8,0,0,0"/>
            <TextBlock Grid.Column="2"
                       Text="Reset"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextBrush}"
                       Margin="8,0,0,0"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- Bindings List -->
        <ScrollViewer Grid.Row="3"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Bindings}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="0"
                                Margin="0"
                                MouseLeftButtonUp="OnBindingClick"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsListening}" Value="True">
                                            <Setter Property="Background" Value="{StaticResource ListeningBrush}"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid Margin="8,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <!-- Action Name -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding ActionName}"
                                           Foreground="{StaticResource TextBrush}"
                                           VerticalAlignment="Center"/>

                                <!-- Key Display -->
                                <Border Grid.Column="1"
                                        Background="{Binding IsListening, Converter={StaticResource BooleanToBrushConverter}}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        Padding="8,4"
                                        Margin="0,0,8,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsListening}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding DisplayKey}"
                                               Foreground="{StaticResource TextBrush}"
                                               FontFamily="Consolas"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsListening}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DisplayKey}" Value="Unbound">
                                                        <Setter Property="Foreground" Value="{StaticResource SubtleBrush}"/>
                                                        <Setter Property="FontStyle" Value="Italic"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>

                                <!-- Clear Button -->
                                <Button Grid.Column="2"
                                        Content="Clear"
                                        Click="OnClearBindingClick"
                                        MinWidth="70"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
