<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.EspSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoneEftDmaRadar.UI.Radar.Views"
             xmlns:conv="clr-namespace:LoneEftDmaRadar.UI.Misc"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             Padding="10">

    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:SettingsViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <UserControl.Resources>
        <conv:StringToColorConverter x:Key="StringToColorConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical"
                    Margin="0,0,0,10">

            <!-- General Settings -->
            <GroupBox Header="ESP Fuser General Settings"
                      Margin="0,0,0,12">
                <StackPanel>
                    <WrapPanel>
                        <Button Content="Start Fuser"
                                Command="{Binding StartEspCommand}"
                                Width="120"
                                Height="32"
                                Margin="0,0,16,8"
                                ToolTip="Opens the ESP Window in Fullscreen Mode."/>
                        <CheckBox Content="Auto Startup"
                                  IsChecked="{Binding EspAutoStartup, Mode=TwoWay}"
                                  VerticalAlignment="Center"
                                  ToolTip="Automatically start ESP Fuser when the application launches."/>
                    </WrapPanel>

                    <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Target Screen:" VerticalAlignment="Center" Margin="0,0,8,0" Width="100"/>
                        <ComboBox Width="300"
                                  ItemsSource="{Binding AvailableScreens}"
                                  SelectedValue="{Binding EspTargetScreen, Mode=TwoWay}"
                                  SelectedValuePath="Index"
                                  DisplayMemberPath="DisplayName"
                                  ToolTip="Select which monitor to display the ESP window on when using Start Fuser"/>
                    </WrapPanel>

                    <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Resolution Override (0 = Auto): " VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Width="65" Text="{Binding EspScreenWidth, Mode=TwoWay}" Margin="0,0,8,0" ToolTip="Width (e.g. 1920, 2560). Set to 0 to auto-detect selected monitor resolution."/>
                        <TextBlock Text="x" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Width="65" Text="{Binding EspScreenHeight, Mode=TwoWay}" Margin="0,0,16,0" ToolTip="Height (e.g. 1080, 1440). Set to 0 to auto-detect selected monitor resolution."/>
                    </WrapPanel>

                    <GroupBox Header="Text Style" Margin="0,8,0,0">
                        <StackPanel>
                            <WrapPanel Margin="0,4,0,0">
                                <TextBlock Text="Font Family:" VerticalAlignment="Center" Width="90"/>
                                <TextBox Width="180"
                                         Text="{Binding EspFontFamily, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="Use any installed font family name (e.g. Segoe UI, Arial, Consolas, Microsoft YaHei)"/>
                            </WrapPanel>
                            <WrapPanel Margin="0,4,0,0">
                                <TextBlock Text="Font Weight:" VerticalAlignment="Center" Width="90"/>
                                <ComboBox Width="180"
                                          ItemsSource="{Binding AvailableFontWeights}"
                                          SelectedItem="{Binding EspFontWeight, Mode=TwoWay}"
                                          ToolTip="Font weight (Regular, Medium, Semibold, Bold, etc.)"/>
                            </WrapPanel>
                            <WrapPanel Margin="0,4,0,0">
                                <TextBlock Text="Sizes (S/M/L):" VerticalAlignment="Center" Width="90"/>
                                <TextBox Width="50"
                                         Text="{Binding EspFontSizeSmall, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="Small text size (loot labels)"/>
                                <TextBlock Text="/" VerticalAlignment="Center" Margin="6,0"/>
                                <TextBox Width="50"
                                         Text="{Binding EspFontSizeMedium, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="Medium text size (names, exfils)"/>
                                <TextBlock Text="/" VerticalAlignment="Center" Margin="6,0"/>
                                <TextBox Width="50"
                                         Text="{Binding EspFontSizeLarge, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="Large text size (status text)"/>
                            </WrapPanel>
                            <TextBlock Text="Changes apply instantly to the ESP overlay"
                                       Foreground="Gray"
                                       FontSize="10"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Player ESP" Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <WrapPanel>
                            <CheckBox Content="Box" IsChecked="{Binding EspPlayerBoxes, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Skeleton" IsChecked="{Binding EspPlayerSkeletons, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Names" IsChecked="{Binding EspPlayerNames, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Group IDs" IsChecked="{Binding EspGroupIds, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Group Colors" IsChecked="{Binding EspGroupColors, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Faction Text" IsChecked="{Binding EspPlayerFaction, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Faction Color" IsChecked="{Binding EspFactionColors, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Health Status" IsChecked="{Binding EspPlayerHealth, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Weapon" IsChecked="{Binding EspPlayerWeapon, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Distance" IsChecked="{Binding EspPlayerDistance, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Head Circle" IsChecked="{Binding EspHeadCirclePlayers, Mode=TwoWay}" Margin="0,0,16,8" />
                         </WrapPanel>
                         <WrapPanel Margin="0,4,0,0">
                            <TextBlock Text="Max Distance (0 = Unlimited):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Slider x:Name="PlayerDistanceSlider"
                                    Width="300"
                                    Margin="0,0,8,0"
                                    Minimum="0"
                                    Maximum="1000"
                                    SmallChange="10"
                                    LargeChange="100"
                                    Value="{Binding EspPlayerMaxDistance, Mode=TwoWay}"/>
                            <TextBlock Text="{Binding Value, ElementName=PlayerDistanceSlider, StringFormat='{}{0:F0}m'}"
                                       VerticalAlignment="Center"
                                       MinWidth="50"/>
                        </WrapPanel>
                        <WrapPanel Margin="0,8,0,0">
                            <TextBlock Text="Label Position (Players):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox Width="140"
                                      ItemsSource="{Binding LabelPositions}"
                                      SelectedItem="{Binding EspLabelPosition, Mode=TwoWay}"
                                      ToolTip="Choose where the player label is drawn relative to the bounding box."/>
                            <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <xctk:ColorPicker Width="42" Height="26"
                                                  SelectedColor="{Binding EspColorPlayers, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                                  UsingAlphaChannel="True"
                                                  ShowRecentColors="False"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="16,4,0,0" VerticalAlignment="Center">
                                <TextBlock Text="BEAR Faction:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <xctk:ColorPicker Width="42" Height="26"
                                                  SelectedColor="{Binding EspColorFactionBear, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                                  UsingAlphaChannel="True"
                                                  ShowRecentColors="False"/>
                                <TextBlock Text="USEC:" VerticalAlignment="Center" Margin="10,0,6,0"/>
                                <xctk:ColorPicker Width="42" Height="26"
                                                  SelectedColor="{Binding EspColorFactionUsec, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                                  UsingAlphaChannel="True"
                                                  ShowRecentColors="False"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                    
                    <!-- ESP Preview Panel -->
                    <Border Grid.Column="1" 
                            Width="240" Height="320"
                            Margin="16,0,0,0"
                            CornerRadius="8"
                            BorderBrush="{DynamicResource App.BorderBrush}"
                            BorderThickness="1"
                            Background="#0F1115">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" 
                                       Text="Preview" 
                                       FontSize="11"
                                       Foreground="{DynamicResource App.TextMutedBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,6,0,0"/>
                            <local:EspPreviewControl Grid.Row="1" Margin="4"/>
                        </Grid>
                    </Border>
                </Grid>
            </GroupBox>
            
            <GroupBox Header="AI ESP" Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <WrapPanel>
                            <CheckBox Content="Box" IsChecked="{Binding EspAIBoxes, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Skeleton" IsChecked="{Binding EspAISkeletons, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Names" IsChecked="{Binding EspAINames, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Health Status" IsChecked="{Binding EspAIHealth, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Weapon" IsChecked="{Binding EspAIWeapon, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Distance" IsChecked="{Binding EspAIDistance, Mode=TwoWay}" Margin="0,0,16,8" />
                            <CheckBox Content="Head Circle" IsChecked="{Binding EspHeadCircleAI, Mode=TwoWay}" Margin="0,0,16,8" />
                         </WrapPanel>
                        <WrapPanel Margin="0,8,0,0">
                            <TextBlock Text="Label Position (AI/Scav):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox Width="140"
                                      ItemsSource="{Binding LabelPositions}"
                                      SelectedItem="{Binding EspLabelPositionAI, Mode=TwoWay}"
                                      ToolTip="Choose where the AI/scav label is drawn relative to the bounding box."/>
                            <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="AI/Scav Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <xctk:ColorPicker Width="42" Height="26"
                                                  SelectedColor="{Binding EspColorAI, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                                  UsingAlphaChannel="True"
                                                  ShowRecentColors="False"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Player Scav Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <xctk:ColorPicker Width="42" Height="26"
                                                  SelectedColor="{Binding EspColorPlayerScavs, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                                  UsingAlphaChannel="True"
                                                  ShowRecentColors="False"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Raider Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <xctk:ColorPicker Width="42" Height="26"
                                                  SelectedColor="{Binding EspColorRaiders, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                                  UsingAlphaChannel="True"
                                                  ShowRecentColors="False"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Boss Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <xctk:ColorPicker Width="42" Height="26"
                                                  SelectedColor="{Binding EspColorBosses, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                                  UsingAlphaChannel="True"
                                                  ShowRecentColors="False"/>
                            </StackPanel>
                         </WrapPanel>
                         <WrapPanel Margin="0,4,0,0">
                            <TextBlock Text="Max Distance (0 = Unlimited):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Slider x:Name="AIDistanceSlider"
                                    Width="300"
                                    Margin="0,0,8,0"
                                    Minimum="0"
                                    Maximum="1000"
                                    SmallChange="10"
                                    LargeChange="100"
                                    Value="{Binding EspAIMaxDistance, Mode=TwoWay}"/>
                            <TextBlock Text="{Binding Value, ElementName=AIDistanceSlider, StringFormat='{}{0:F0}m'}"
                                       VerticalAlignment="Center"
                                       MinWidth="50"/>
                         </WrapPanel>
                        <TextBlock Text="Head circles inherit the entity color (players, scavs, raiders, bosses)."
                                   Foreground="Gray"
                                   FontSize="10"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                    
                    <!-- AI ESP Preview Panel -->
                    <Border Grid.Column="1" 
                            Width="240" Height="320"
                            Margin="16,0,0,0"
                            CornerRadius="8"
                            BorderBrush="{DynamicResource App.BorderBrush}"
                            BorderThickness="1"
                            Background="#0F1115">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" 
                                       Text="Preview" 
                                       FontSize="11"
                                       Foreground="{DynamicResource App.TextMutedBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,6,0,0"/>
                            <local:EspPreviewControl Grid.Row="1" Margin="4" PreviewMode="AI"/>
                        </Grid>
                    </Border>
                </Grid>
            </GroupBox>
            
            <GroupBox Header="Loot, Exfils &amp; Explosives" Margin="0,0,0,12">
                <StackPanel>
                     <WrapPanel>
                        <CheckBox Content="Show Loot" IsChecked="{Binding EspLoot, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Prices" IsChecked="{Binding EspLootPrice, Mode=TwoWay}" Margin="0,0,16,8" IsEnabled="{Binding EspLoot}" />
                        <CheckBox Content="Show Exfils" IsChecked="{Binding EspExfils, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Tripwires" IsChecked="{Binding EspTripwires, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Grenades" IsChecked="{Binding EspGrenades, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Loot Cone Filter"
                                  IsChecked="{Binding EspLootConeEnabled, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <CheckBox Content="Show Food" IsChecked="{Binding EspFood, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Meds" IsChecked="{Binding EspMeds, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Backpacks" IsChecked="{Binding EspBackpacks, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Quest Items" IsChecked="{Binding EspQuestLoot, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Corpses" IsChecked="{Binding EspCorpses, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Containers" IsChecked="{Binding EspContainers, Mode=TwoWay}" Margin="0,0,16,8" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0" IsEnabled="{Binding EspContainers}">
                        <TextBlock Text="Container Distance"
                                   VerticalAlignment="Center" />
                        <Slider x:Name="EspContainerDistanceSlider"
                                Width="150"
                                Margin="8,0"
                                Minimum="0"
                                Maximum="200"
                                SmallChange="1"
                                LargeChange="10"
                                Value="{Binding EspContainerDistance, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Value, ElementName=EspContainerDistanceSlider, StringFormat='{}{0:F0}'}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0" IsEnabled="{Binding EspTripwires}">
                        <TextBlock Text="Tripwire Distance"
                                   VerticalAlignment="Center" />
                        <Slider x:Name="EspTripwireDistanceSlider"
                                Width="200"
                                Margin="8,0"
                                Minimum="0"
                                Maximum="500"
                                SmallChange="10"
                                LargeChange="50"
                                Value="{Binding EspTripwireDistance, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Value, ElementName=EspTripwireDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0" IsEnabled="{Binding EspGrenades}">
                        <TextBlock Text="Grenade Distance"
                                   VerticalAlignment="Center" />
                        <Slider x:Name="EspGrenadeDistanceSlider"
                                Width="200"
                                Margin="8,0"
                                Minimum="0"
                                Maximum="500"
                                SmallChange="10"
                                LargeChange="50"
                                Value="{Binding EspGrenadeDistance, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Value, ElementName=EspGrenadeDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0" IsEnabled="{Binding EspGrenades}">
                        <CheckBox Content="Show Grenade Trail"
                                  IsChecked="{Binding EspGrenadeTrail, Mode=TwoWay}"
                                  Margin="0,0,16,0" />
                        <TextBlock Text="Trail Length:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />
                        <Slider x:Name="EspGrenadeTrailLengthSlider"
                                Width="120"
                                Margin="8,0"
                                Minimum="10"
                                Maximum="200"
                                SmallChange="5"
                                LargeChange="20"
                                Value="{Binding EspGrenadeTrailLength, Mode=TwoWay}"
                                IsEnabled="{Binding EspGrenadeTrail}" />
                        <TextBlock Text="{Binding Value, ElementName=EspGrenadeTrailLengthSlider, StringFormat='{}{0:F0}'}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                        <CheckBox Content="Show Blast Radius"
                                  IsChecked="{Binding EspGrenadeBlastRadius, Mode=TwoWay}"
                                  Margin="16,0,0,0" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0" IsEnabled="{Binding EspLootConeEnabled}">
                        <TextBlock Text="Cone Angle"
                                   VerticalAlignment="Center" />
                        <Slider x:Name="LootConeSlider"
                                Width="150"
                                Margin="8,0"
                                Minimum="5"
                                Maximum="60"
                                SmallChange="1"
                                LargeChange="5"
                                Value="{Binding EspLootConeAngle, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Value, ElementName=LootConeSlider, StringFormat=F0}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                     </WrapPanel>
                    <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Max Distance (0 = Unlimited):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="LootDistanceSlider"
                                Width="200"
                                Margin="0,0,8,0"
                                Minimum="0"
                                Maximum="500"
                                SmallChange="10"
                                LargeChange="50"
                                Value="{Binding EspLootMaxDistance, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=LootDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   MinWidth="50"/>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Loot Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorLoot, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Container Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorContainers, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Exfil Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorExfil, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Tripwire Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorTripwire, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Grenade Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorGrenade, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- Mini Radar Settings -->
            <GroupBox Header="Mini Radar" Margin="0,0,0,12">
                <StackPanel>
                    <CheckBox Content="Enable Mini Radar" IsChecked="{Binding MiniRadarEnabled, Mode=TwoWay}" Margin="0,0,0,8"/>
                    
                    <WrapPanel Margin="0,0,0,8" IsEnabled="{Binding MiniRadarEnabled}">
                         <TextBlock Text="Size:" VerticalAlignment="Center" Width="60"/>
                         <Slider Width="150" Minimum="150" Maximum="512" Value="{Binding MiniRadarSize, Mode=TwoWay}" SmallChange="10" LargeChange="50"/>
                         <TextBlock Text="{Binding MiniRadarSize, StringFormat='{}{0} px'}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </WrapPanel>

                    <WrapPanel Margin="0,0,0,8" IsEnabled="{Binding MiniRadarEnabled}">
                        <TextBlock Text="Position:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="X" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBox Width="50" Text="{Binding MiniRadarScreenX, Mode=TwoWay}" ToolTip="-1 = Auto (Right)"/>
                        <TextBlock Text="Y" VerticalAlignment="Center" Margin="8,0,4,0"/>
                        <TextBox Width="50" Text="{Binding MiniRadarScreenY, Mode=TwoWay}"/>
                        <TextBlock Text="(-1 X = Auto Top-Right)" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="Gray" FontSize="10"/>
                    </WrapPanel>
                    
                    <WrapPanel Margin="0,0,0,8" IsEnabled="{Binding MiniRadarEnabled}">
                        <CheckBox Content="Self Lock (Player Centered)" IsChecked="{Binding MiniRadarSelfLock, Mode=TwoWay}" Margin="0,0,16,0" ToolTip="Keep local player centered on the mini radar"/>
                        <TextBlock Text="Zoom:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="MiniRadarZoomSlider" 
                                Width="120" 
                                Minimum="0.5" 
                                Maximum="10" 
                                Value="{Binding MiniRadarZoomLevel, Mode=TwoWay}" 
                                SmallChange="0.5" 
                                LargeChange="1"
                                IsEnabled="{Binding MiniRadarSelfLock}"/>
                        <TextBlock Text="{Binding Value, ElementName=MiniRadarZoomSlider, StringFormat='{}{0:F1}x'}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </WrapPanel>

                    <TextBlock Text="Visibility Layers" FontWeight="SemiBold" Margin="0,4,0,4" IsEnabled="{Binding MiniRadarEnabled}"/>
                    <WrapPanel IsEnabled="{Binding MiniRadarEnabled}">
                         <CheckBox Content="Players" IsChecked="{Binding MiniRadarShowPlayers, Mode=TwoWay}" Margin="0,0,12,0"/>
                         <CheckBox Content="Loot" IsChecked="{Binding MiniRadarShowLoot, Mode=TwoWay}" Margin="0,0,12,0"/>
                         <CheckBox Content="Containers" IsChecked="{Binding MiniRadarShowContainers, Mode=TwoWay}" Margin="0,0,12,0"/>
                         <CheckBox Content="Exits" IsChecked="{Binding MiniRadarShowExits, Mode=TwoWay}" Margin="0,0,12,0"/>
                         <CheckBox Content="Grenades" IsChecked="{Binding MiniRadarShowGrenades, Mode=TwoWay}" Margin="0,0,12,0"/>
                    </WrapPanel>
                    <CheckBox Content="Invert Map Colors (Dark)" IsChecked="{Binding MiniRadarInvertColors, Mode=TwoWay}" IsEnabled="{Binding MiniRadarEnabled}" Margin="0,8,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Performance Settings -->
            <GroupBox Header="Misc"
                      Margin="0,0,0,12">
                <StackPanel>
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Text="ESP Max FPS (0 = unlimited / 144 default):"
                                   VerticalAlignment="Center" />
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Slider x:Name="EspFpsSlider"
                                    Width="220"
                                    Minimum="0"
                                    Maximum="360"
                                    SmallChange="10"
                                    LargeChange="30"
                                    TickFrequency="30"
                                    IsSnapToTickEnabled="True"
                                   Value="{Binding EspMaxFPS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="{Binding Value, ElementName=EspFpsSlider, StringFormat='{}{0:F0}'}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                        <TextBlock Text="0 = unlimited (defaults to 144). Lower values save CPU/GPU."
                                   Foreground="Gray"
                                   FontSize="10"
                                   Margin="0,2,0,0" />
                    </StackPanel>


                    <CheckBox Content="Crosshair"
                                  ToolTip="Displays a simple crosshair at the center of the ESP window."
                                  IsChecked="{Binding EspCrosshair, Mode=TwoWay}"
                                  Margin="0,0,16,8" />

                    <WrapPanel Margin="0,4,0,0" IsEnabled="{Binding EspCrosshair}">
                        <TextBlock Text="Crosshair Length" VerticalAlignment="Center"/>
                        <Slider x:Name="CrosshairLengthSlider"
                                Width="150"
                                Margin="8,0"
                                Minimum="5"
                                Maximum="100"
                                SmallChange="1"
                                LargeChange="5"
                                Value="{Binding EspCrosshairLength, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=CrosshairLengthSlider, StringFormat=F0}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </WrapPanel>

                    <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Crosshair Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorCrosshair, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                    </StackPanel>
                    
                    <WrapPanel Margin="0,8,0,0">
                        <CheckBox Content="Local Player Aimline"
                                  ToolTip="Show a red line from your weapon's fireport in the direction you're aiming."
                                  IsChecked="{Binding EspLocalAimline, Mode=TwoWay}"
                                  Margin="0,0,16,0" />
                        <CheckBox Content="Local Player Ammo"
                                  ToolTip="Show your current ammo count and weapon info on the ESP."
                                  IsChecked="{Binding EspLocalAmmo, Mode=TwoWay}"
                                  Margin="0,0,16,0" />
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
